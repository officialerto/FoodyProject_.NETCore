@model Category

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Categories</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Update Category</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Update Category Operation</a>
                </li>
            </ul>
        </div>
        <div class="row">

            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Update Category Panel</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <input type="hidden" asp-for="CategoryId" class="form-control" />
                            <br />
                            <label>Category Name</label>
                            <input type="text" asp-for="CategoryName" class="form-control" />
                            <br />
                            <button class="btn btn-success">Update Category</button>
                            <a href="/Categories/CategoryList/" class="btn btn-primary">Return Category List</a>
                        </form>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

